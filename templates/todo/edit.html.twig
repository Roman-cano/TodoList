{% extends 'base.html.twig' %}

{% block title %}Edit Todo{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Titre de la page -->
        <h1 class="text-center mb-4 text-primary">Edit Todo</h1>

        <!-- Formulaire de mise à jour -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                {{ include('todo/_form.html.twig', {'button_label': 'Update'}) }}
            </div>
        </div>

        <!-- Bouton Back to List -->
        <div class="text-center mb-4">
            <form action="{{ path('app_todo_index') }}" method="get">
                <button type="submit" class="btn btn-secondary" style="background-color: #2c3e50; border: none; padding: 12px 24px; border-radius: 8px; font-size: 16px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); transition: background-color 0.3s, box-shadow 0.3s;">
                    Back to List
                </button>
            </form>
        </div>

        <!-- Formulaire de suppression -->
        <div class="text-center form-delete mt-4">
            {{ include('todo/_delete_form.html.twig') }}
        </div>
    </div>

    <style>
        /* Style global de la page */
        body {
            background-color: #f4f6f9;
            font-family: 'Arial', sans-serif;
            display:flex;
            flex-direction:column;
            align-items:center;
            justify-content:center;
        }

        .container {
            max-width: 800px;
        }

        h1 {
            font-size: 2rem;
            color: #2c3e50;
            font-weight: bold;
        }

        /* Style du bouton Back to List */
        .btn-secondary {
            transition: all 0.3s ease-in-out;
        }

        /* Effet au survol du bouton */
        .btn-secondary:hover {
            background-color: #34495e;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            transform: translateY(-2px);
        }

        /* Style pour le formulaire de mise à jour dans une carte */
        .card {
            border-radius: 10px;
        }

        .card-body {
            padding: 30px;
        }

        /* Espacement supplémentaire pour le formulaire de suppression */
        .form-delete button {
            margin-top: 20px;
        }

        /* Effet de survol du formulaire de suppression */
        .form-delete button:hover {
            background-color: #e74c3c;
            border: none;
            color: white;
            transform: translateY(-2px);
        }

        /* Ombre des éléments */
        .card, .btn {
            transition: all 0.3s ease;
        }

        .card:hover, .btn:hover {
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

        /* Style des inputs */
        input, select, textarea {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #fff;
            font-size: 16px;
            transition: all 0.3s ease-in-out;
        }

        /* Effet de focus sur les inputs */
        input:focus, select:focus, textarea:focus {
            border-color: #3498db;
            box-shadow: 0 0 5px rgba(52, 152, 219, 0.6);
            outline: none;
        }

        /* Style des labels des inputs */
        label {
            font-size: 16px;
            font-weight: bold;
            color: #2c3e50;
        }

        /* Ajout d'une marge pour espacer les inputs */
        .form-group {
            margin-bottom: 20px;
        }
    </style>
{% endblock %}
