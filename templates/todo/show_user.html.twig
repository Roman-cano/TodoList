{% extends 'base.html.twig' %}

{% block title %}Détails de la tâche{% endblock %}

{% block body %}
    {% include 'partials/menu.html.twig' %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <!-- Titre de la tâche -->
                <h1 class="display-4 text-center mb-4">Tâche: {{ todo.libelle }}</h1>

                <!-- Section Utilisateurs -->
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h2 class="h5">Utilisateurs associés</h2>
                    </div>
                    <div class="card-body">
                        {% if users|length > 0 %}
                            <table class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Prénom</th>
                                    <th>Nom</th>
                                    <th>Email</th>
                                    <th>telephone</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ user.prenom }}</td>
                                        <td>{{ user.nom }}</td>
                                        <td>{{ user.mail }}</td>
                                        <td>{{ user.phone    }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p class="text-muted">Aucun utilisateur associé</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
