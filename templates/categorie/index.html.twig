{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    {% include 'partials/menu.html.twig' %}
    <div class="container mt-5">
        <h1 class="display-4 text-center mb-4">Liste des catégories</h1>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Catégories</h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for categorie in categories %}
                        <tr>
                            <td>{{ categorie.id }}</td>
                            <td>{{ categorie.nom }}</td>
                            <td>{{ categorie.description }}</td>
                            <td>{{ categorie.date}}</td>
                            <td>
                                <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <a href="{{ path('app_categorie_tasks', {'id': categorie.id}) }}" class="btn btn-success btn-sm">
                                    <i class="fas fa-tasks"></i> Afficher les tâches
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">Aucune catégorie trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="text-center mt-4">
                    <a href="{{ path('app_categorie_new') }}" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus-circle"></i> Ajouter une catégorie
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
