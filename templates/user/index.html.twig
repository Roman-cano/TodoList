{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    {% include 'partials/menu.html.twig' %}
    <div class="container mt-5">
        <h1 class="display-4 text-center mb-4">Liste des utilisateurs</h1>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Utilisateurs</h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Prenom</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Actions</th>
                        <th>Tâches associées</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.mail }}</td>
                            <td>{{ user.phone }}</td>
                            <td>
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('app_user_show_tasks', {'id': user.id}) }}" class="btn btn-success btn-sm">
                                    <i class="fas fa-tasks"></i> Voir les tâches
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center text-muted">Aucun utilisateur trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="text-center mt-4">
                    <a href="{{ path('app_user_new') }}" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus-circle"></i> Ajouter un utilisateur
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
